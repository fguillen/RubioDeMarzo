<div id="items">
  <% items.each do |item| %>
    <div class="item">
      <%= link_to [:front, item] do %>
        <div class="info">
          <% if !item.pics.empty? %>
            <%= image_tag item.pics.by_position.first.attach(:front) %>
          <% end %>
          <h2><%= item.title %></h2>
        </div>
      <% end %>
      <ul class="categories">
        <% item.categories.each do |category| %>
          <li><%= link_to category.name, [:front, category] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>