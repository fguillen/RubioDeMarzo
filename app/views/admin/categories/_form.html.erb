<%= form_for [:admin, @category], :html => { :class => "form-horizontal" } do |f| %>
  <%= render "/admin/shared/form_errors", :object => f.object %>

  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :section, :class => "control-label" %>
    <div class="controls">
      <%= f.select(:section, Category::SECTIONS.values { |e| [ e, e ] }) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :position, :class => "control-label" %>
    <div class="controls">
      <%= f.number_field :position, :class => "span2" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

