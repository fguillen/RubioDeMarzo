<% title "Items" %>

<div id="items">
  <p><%= link_to "New Item", :new_admin_item, :class => "btn" %></p>

  <table class="table table-striped table-hover table-sortable">
    <thead>
      <tr>
        <th class="span1"></th>
        <th class="span1">Id</th>
        <th class="span7">Title</th>
        <th class="span3">Categories</th>
      </tr>
    </thead>

    <tbody data-update-url="<%= reorder_admin_items_url %>">
      <% @items.each do |item| %>
        <tr data-id="<%= item.id %>">
          <td class="handle"><i class="icon-list"></i></td>
          <td><%= item.id %></td>
          <td><%= link_to item.title, edit_admin_item_path(item) %></td>
          <td><%= item.categories.map(&:name).join(", ") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>